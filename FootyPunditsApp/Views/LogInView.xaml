<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FootyPunditsApp.Views.LogInView"
             xmlns:local="clr-namespace:FootyPunditsApp;assembly=FootyPunditsApp">
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Spacing="15" BackgroundColor="White">

                <Image Source="AppLogo.PNG" HorizontalOptions="Center" ></Image>
                <Label Margin="20,-35,0,0" FontSize="20" FontAttributes="Bold" Text="LogIn to your account" FontFamily="Roboto" TextColor="Black"/>

                <Frame Margin="30,20,30,0" CornerRadius="11" BorderColor="Gray" HeightRequest="60" WidthRequest="60" Padding="0">
                    <local:MyEntry Margin="7,-50" Placeholder="Email" PlaceholderColor="LightGray" Text="{Binding Email}" />
                </Frame>




                <Frame Margin="30,20,30,0" CornerRadius="11" BorderColor="Gray" HeightRequest="60" WidthRequest="60" Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="0.2*" />
                        </Grid.ColumnDefinitions>

                        <local:MyEntry Margin="7,-50,20,-53" Placeholder="Password" PlaceholderColor="LightGray" Text="{Binding Password}" Grid.Column="0" />
                        <Image Source="Icon_ShowPassword.png" Grid.Column="1" HeightRequest="24">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PasswordVisibility}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </Frame>



                <Frame Margin="30,20,30,0" CornerRadius="11" BorderColor="Gray" HeightRequest="60" WidthRequest="60" Padding="0">
                    <local:MyEntry Margin="7" Placeholder="Confirm password" PlaceholderColor="LightGray" Text="{Binding ConfirmPassword}" />
                </Frame>

                <Label HorizontalOptions="Center" FontSize="20" FontFamily="Roboto" TextColor="Gray">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Dont have have an account? " />
                            <Span Text="LogIn" TextColor="#499D62" FontSize="15" >
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SignUpCommand}" />
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>


                <Button Margin="37,25,37,10"
                        HeightRequest="50"
                        CornerRadius="5"
                        TextColor="White" 
                        Text="LogIn"
                        FontSize="90"
                        Font="Prompt"
                        BackgroundColor="#499D62"
                Command="{Binding LogINCommand}"/>


                <Grid Margin="0, 11, 0, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45*" />
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="45*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="23*" />
                    </Grid.ColumnDefinitions>


                </Grid>


            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>